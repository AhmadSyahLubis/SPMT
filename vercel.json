{
  "version": 2,
  "builds": [
    {
      "src": "public/index.php",
      "use": "@vercel/php"
    },
    {
      "src": "public/**",
      "use": "@vercel/static"
    }
  ],
  "routes": [
    { "handle": "filesystem" },
    { 
      "src": "^/build/(.*)",
      "dest": "/build/$1"
    },
    { 
      "src": "^/storage/(.*)",
      "dest": "/storage/$1"
    },
    {
      "src": "^/(.*\\.(css|js|jpg|jpeg|png|gif|ico|svg|woff|woff2|ttf|eot))",
      "dest": "/$1"
    },
    { 
      "src": "^/(.*)",
      "dest": "/index.php"
    }
  ],
  "build": {
    "env": {
      "APP_ENV": "production",
      "APP_DEBUG": "false"
    }
  }
}
