{
  "version": 2,
  "builds": [
    {
      "src": "public/index.php",
      "use": "@vercel/php"
    },
    {
      "src": "public/**",
      "use": "@vercel/static"
    }
  ],
  "routes": [
    {
      "src": "^/build/(.*)",
      "dest": "/build/$1"
    },
    {
      "src": "^/storage/(.*)",
      "dest": "/storage/$1"
    },
    {
      "src": "^/favicon\\.ico",
      "dest": "/favicon.ico"
    },
    {
      "src": "^/robots\\.txt",
      "dest": "/robots.txt"
    },
    {
      "src": "^/sitemap\\.xml",
      "dest": "/sitemap.xml"
    },
    {
      "src": "^/(.*\\.(css|js|jpg|jpeg|png|gif|ico|svg|woff|woff2|ttf|eot))",
      "dest": "/$1"
    },
    {
      "src": "^/(.*)",
      "dest": "/index.php"
    }
  ],
  "env": {
    "APP_ENV": "production",
    "APP_DEBUG": "false",
    "APP_URL": "https://your-vercel-url.vercel.app"
  },
  "build": {
    "env": {
      "NODE_ENV": "production"
    }
  },
  "deploy": {
    "env": {
      "APP_ENV": "production"
    }
  }
}
